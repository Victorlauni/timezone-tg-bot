generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserSetting {
  id String @id @db.Uuid @default(uuid())
  userId Int
  chatId Int?
  currentTimezone String?
}

model ChatSetting {
  id String @id @db.Uuid @default(uuid())
  chatId Int
  timezone String 
  timezoneAlias String?
  @@unique([chatId, timezone])
}